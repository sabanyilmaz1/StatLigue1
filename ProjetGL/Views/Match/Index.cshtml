@model IEnumerable<ProjetGL.Models.Match>

@{
    ViewData["Title"] = "Index";
}

<h1>Les Matchs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EquipeD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoreD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoreE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipeE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateMatch)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img height=25px src="@Url.Content("./images/logoEquipes/" + item.EquipeD.AcronymeClub +".png")" alt="Image" />
                @Html.DisplayFor(modelItem => item.EquipeD.NomEquipe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScoreD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScoreE)
            </td>
            <td>
                <img height=25px src="@Url.Content("./images/logoEquipes/" + item.EquipeE.AcronymeClub +".png")" alt="Image" />
                @Html.DisplayFor(modelItem => item.EquipeE.NomEquipe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateMatch)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
